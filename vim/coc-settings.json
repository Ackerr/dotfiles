{
    "languageserver": {
        "golang":{
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes":["go"],
		    "initializationOptions": {
                "gocodeCompletionEnabled": true,
                "diagnosticsEnabled": true,
                "lintTool": "golint"
            }
        }
    },
    "python.jediEnabled": true,
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=120"],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=120"],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd",
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnSaveFiletypes": ["go", "python"],
    "diagnostic.enable": true,
    "diagnostic.signOffset": 1,
    "diagnostic.displayByAle": false,
    "diagnostic.level": "information",
    "diagnostic.errorSign": "\uf467",
    "diagnostic.warningSign": "\uf071",
    "diagnostic.infoSign": "\uf129",
    "diagnostic.hintSign": "\uf864",
    "diagnostic.checkCurrentLine": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.refreshAfterSave": true,
    "codeLens.enable": true
}
